<h1 class="title">ðŸ’¸ Budget Calculator</h1>

<div class="balance-card">
  <h2>Total Balance:</h2>
  <p>$<%= total.toFixed(2) %></p>
</div>

<form class="add-form" action="/add" method="POST">
  <input type="text" name="title" placeholder="Enter Title" required>
  <input type="number" name="amount" placeholder="Enter Amount" step="0.01" required>
  <select name="type" required>
    <option value="income">Income</option>
    <option value="expense">Expense</option>
  </select>
  <button type="submit">Add</button>
</form>

<ul class="transaction-list">
  <% transactions.forEach(transaction => { %>
    <li class="<%= transaction.type %>">
      <span><strong><%= transaction.title %></strong> â€” $<%= transaction.amount.toFixed(2) %> (<%= transaction.type %>)</span>
      <form action="/delete/<%= transaction._id %>" method="POST">
        <button type="submit" class="delete-btn">Delete</button>
      </form>
    </li>
  <% }) %>
</ul>
